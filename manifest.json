{
  "manifest_version": 3,
  "name": "CPE",
  "version": "1.0",
  "description": "capacitateparaelempleo.org complementador de examenes, licencia MIT",
  "action": {
    "default_icon": "icon.png",
    "default_title": "CPE",
    "default_popup": "popup/popup.html"
  },
  "homepage_url": "https://github.com/ArielParra/CPE_Extension",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "options_ui": {
      "page": "options/options.html"
  },
  "content_scripts": [
    {
      "matches": ["*://capacitateparaelempleo.org/*"],
      "js": [
      "background.js",
      "js/debug.js",
      "js/cookies.js",
      "js/setExamCookie.js",
      "js/clickExam.js",
      "js/clickButtons.js",
      "js/sendMessage.js", 
      "js/getExamData.js",
      "js/setExamFull.js",
      "js/delLocalStorage.js",
      "js/getBrowserStorage.js",
      "js/setBrowserStorage.js",
      "js/delBrowserStorage.js"
      ]
    }
  ]
}

